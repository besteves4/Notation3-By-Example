2 a :NaturalNumber , :EvenNumber .

(_:x) log:onNegativeSurface {
    _:x a :NaturalNumber . 

    (_:x 2) math:remainder 0 .

    ## This burns the fuse
    #() log:onNegativeSurface {
    #    (_:x) log:onNegativeSurface {
    #        _:x a :EvenNumber .
    #    }
    #} .

    ## But this not?
    (_:x) log:onPositiveSurface {
        _:x a :EvenNumber .
    } .
